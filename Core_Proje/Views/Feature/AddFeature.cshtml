@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "AddFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddFeature", "Feature", FormMethod.Post))
{
    @Html.HiddenFor(x =>x.FeatureID)
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Header, new {@class="form-control"})
    @Html.ValidationMessageFor(x => x.Header)
    <br />
    @Html.Label("Ad Alanı")
    @Html.TextBoxFor(x => x.Name, new {@class="form-control"})
    @Html.ValidationMessageFor(x => x.Name)
    <br />
    @Html.Label("Bilgiler")
    @Html.TextAreaFor(x => x.Tiitle,10,3 ,new {@class="form-control"})
    @Html.ValidationMessageFor(x => x.Tiitle)
    <br />
    @Html.Label("Durumu")
    @Html.CheckBoxFor(m => m.Status)
    <br>
    <button class="btn btn-info">Kaydet</button>
}