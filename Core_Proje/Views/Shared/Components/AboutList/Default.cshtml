@using EntityLayer.Concrete;
@model List<About>


@foreach (var item in Model)
{
    var stringURL = "https://www.";
    stringURL = stringURL + item.ImageUrl;
    <div class="col-md-6 col-sm-6">
        <h2 class="title"> <strong>@item.Title</strong></h2>
        <p><span class="tm-info-label">Birthday</span> @item.Age</p>
        <p><span class="tm-info-label">Address</span> @item.Adress</p>
        <p><span class="tm-info-label">Phone</span>@item.Phone</p>
        <p><span class="tm-info-label">Email</span>@item.Mail</p>
        <p><span class="tm-info-label">Website</span> <a href="@stringURL" class="tm-red-text">@item.ImageUrl</a></p>
    </div>
}

